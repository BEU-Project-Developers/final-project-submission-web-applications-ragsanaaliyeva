@model FurnitureManagementSystem.Models.About

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Redaktə edin</h4>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <div class="form-group">
                                    <label>Hazırkı şəkil</label><br />
                                    <img src="@Url.Content("~/" + Model.ImagePath)" width="150" />
                                </div>
                            }
                            <div class="form-group">
                                <label asp-for="Photo">Şəkil</label>
                                <input asp-for="Photo" type="file" class="form-control" />
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Title">Başlıq</label>
                                <input asp-for="Title" type="text" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Subtitle">Altbaşlıq</label>
                                <input asp-for="Subtitle" type="text" class="form-control" />
                            </div>
                           
                            <button type="submit" class="btn btn-primary me-2">Yadda saxla</button>
                            <button type="reset" class="btn btn-light">Ləğv et</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
