@model FurnitureManagementSystem.Models.About

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title text-danger">Silinmə təsdiqi</h4>

                        <form asp-action="Delete" asp-controller="AboutUs" asp-area="Admin" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />

                            <p>
                                <strong>@Model.Title</strong> başlıqlı məlumatı silmək istədiyinizə əminsinizmi?
                            </p>

                            <button type="submit" class="btn btn-danger">Sil</button>
                            <a asp-action="Index" class="btn btn-light">İmtina et</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
