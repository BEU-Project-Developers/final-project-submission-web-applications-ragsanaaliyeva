@model List<FurnitureManagementSystem.Models.About>
@{
    int count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Haqqimizda</h4>

            <a asp-controller="AboutUs" asp-action="Create" type="button" class="btn btn-info">Əlavə edin</a>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Sıra nömrəsi
                            </th>
                            <th>
                                Basliq
                            </th>
                            <th>
                                Altbasliq
                            </th>
                            <th>
                                Təsvir1
                            </th>
                            <th>
                                Təsvir2
                            </th>
                            <th>
                                Təsvir3
                            </th>
                            <th>
                                Şəkil
                            </th>
                            <th>
                                Ayarlar
                            </th>
                        </tr>
                    </thead>

                    <tbody>


                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(count++)
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Subtitle
                                </td>
                               

                                <td class="py-1">
                                    <img src="@Url.Content("~/" + @item.ImagePath)" alt="image" width="150" />
                                </td>
                                <td>
                                    <a asp-controller="AboutUs" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning"><i class="mdi mdi-grease-pencil"></i></a>
                                    <a asp-controller="AboutUs" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>